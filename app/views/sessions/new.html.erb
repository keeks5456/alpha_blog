<h1 class="text-center mt-4">Login For AlphaBlog</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, local: true ) do |form| %>
    </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-2-form-label"%>
      <div class="col-10">
        <%= form.email_field :email, class:"form-control", placeholder: "Enter email"%>
      </div>
  </div>

  <div class="form-group row">
  <%= form.label :password, class: "col-2-form-label" %>
    <div class="col-10">
    <%= form.password_field :password, class:"form-control", placeholder: "Enter your password"%>
    </div>
</div>

  <div class="form-group row">
    <%= form.submit "Login", class:"btn btn-dark btn-lrg"%>
  </div>
    <% end %>
    </div>
  </div>
  <td><%= link_to "[ Cancel and return to list All Articles ]", @article %></td>
</div>