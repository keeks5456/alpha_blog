<div id="page-content">
  <div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
  </div>
  <div class="container">
    <h1 class="text-center mt-4">Bloggers</h1>
    <% @users.each do |user|%>
      <div class="row justify-content-md-center">
        <div class="col-8">
          <div class="card text-center m-5 shadow-lg  mb-5 rounded">
            <div class="card-header font-italic">
             <%=link_to user.username, user%>
            </div>
            <div class="card-body ">
              <h5 class="card-title"><%= link_to gravatar_for(user, size:150), user %></h5>
              <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
              <div class="container btn-container">
                <%= link_to "View", user_path(user), class:"btn btn-outline-dark"%>
                <% if logged_in? %> 
                  <% if user == current_user %>
                    <%= link_to "Edit", edit_user_path(user.id), class:"btn btn-outline-dark", data: {  turbo_method: :edit,} %>
                  <% end %>
                    <% if current_user.admin? %>
                      <%= link_to "Delete User", user_path(user), class:"btn btn-outline-dark", method: :delete, data: {confirm: "Are you sure?"} %>
                    <% end %>
                <% end %>
              </div> 
            </div> 
            <div class="card-footer text-muted">
              <small>Joined <%= time_ago_in_words(user.created_at)%> ago, edited at <%= time_ago_in_words(user.updated_at)%></small>
            </div>
          </div>
      </div>
    </div>
    <%end%>
  </div>
  <div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
  </div>
</div>


