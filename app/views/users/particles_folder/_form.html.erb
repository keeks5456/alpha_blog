<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render partial: "users/particles_folder/user_errors"%>
      <%= form_with(model: @user, local: true ) do |form| %>
        <div class="form-group row">
        <%= form.label :username, class: "col-2-form-label" %>
          <div class="col-10">
          <%= form.text_field :username, class:"form-control"%>
          </div>
      </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-2-form-label"%>
      <div class="col-10">
        <%= form.email_field :email, class:"form-control", placeholder: "Enter email username"%>
      </div>
  </div>

  <div class="form-group row">
  <%= form.label :password, class: "col-2-form-label" %>
    <div class="col-10">
    <%= form.password_field :password, class:"form-control", placeholder: "create a password"%>
    </div>
</div>

  <div class="form-group row">
    <%= form.submit(@user.new_record? ?  "Sign Up" : "Update Account", class:"btn btn-dark btn-lrg", placeholder: "Enter email address")%>
  </div>
    <% end %>
    </div>
  </div>
  <td><%= link_to "[Cancel and return to list All Articles]", @article %></td>
</div>