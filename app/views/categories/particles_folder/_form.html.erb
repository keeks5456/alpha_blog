<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render partial: "categories/particles_folder/errors"%>
      <%= form_with(model: @category, local: true ) do |form| %>
        <div class="form-group row">
        <%= form.label :name, "Category Name", class: "col-2-form-label" %>
          <div class="col-10">
          <%= form.text_field :name, class:"form-control", placeholder: "Enter name"%>
          </div>
      </div>
  <div class="form-group row">
    <%= form.submit class:"btn btn-outline-light btn-lg"%>
  </div>
    <% end %>
    </div>
  </div>
  <td><%= link_to "[ Cancel and return to list All Articles ]", @article %></td>
</div>