<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= render "articles/particles_folder/errors"%>
    <%= form_with(model: @article, local: true ) do |form| %>
    <div class="form-group row">
          <%= form.label :title, class: "col-2-form-label" %>
            <div class="col-10">
            <%= form.text_field :title, class:"form-control"%>
            </div>
    </div>

    <div class="form-group row">
      <%= form.label :description, class: "col-2-form-label"%>
        <div class="col-10">
      <%= form.text_area :description, rows:8, class:"form-control"%>
        </div>
    </div>

    <div class="form-group row">
    <%= form.label :category, class: "col-2-form-label"%>
      <div class="col-10">
      <%= form.collection_select(:category_ids, Category.all, :id, :name, 
      {prompt: "Make your selection here. (Can be empty)" }, {multiple: true, size: 4, class: "form-select shadow rounded"}) %>

      </div>
  </div>

    <div class="form-group row">
      <%= form.submit  class:"btn btn-dark btn-lrg"%>
    </div>
      <% end %>
      </div>
  </div>
    <td><%= link_to "Cancel and return to list All Articles", @article %></td>
</div>